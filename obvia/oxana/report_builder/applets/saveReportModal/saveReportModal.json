{
  "ctor": "Modal",
  "props": {
    "id": "saveReportModal",
    "title": "Save Report",
    "components": {
      "modalBody": [
        {
          "ctor": "Container",
          "props": {
            "id": "reportNameContainer",
            "css": {
              "display": "grid"
            },
            "components": [
              {
                "ctor": "Label",
                "props": {
                  "id": "reportNameLabel",
                  "label": "Report Name"
                }
              },
              {
                "ctor": "Label",
                "props": {
                  "id": "reportNameVersionLabel",
                  "label": "{selectedReportName}",
                  "visible": "{showNewReportLabel}",
                  "css": {
                    "fontSize": "30px",
                    "border": "1px solid black",
                    "borderRadius": "5px",
                    "padding": "5px"
                  }
                }
              },
              {
                "ctor": "TextInput",
                "props": {
                  "id": "reportNameInput",
                  "label": "Report Name",
                  "type": "text",
                  "placeholder": "Report Name",
                  "visible": "{showNewReportTextInput}",
                  "value": "{selectedReportName}"
                }
              },
              {
                "ctor": "RequiredFieldValidator",
                "props": {
                  "controlToValidate": "reportNameInput",
                  "errorMessage": "Please fill this field."
                }
              }
            ]
          }
        },
        {
          "ctor": "Container",
          "props": {
            "id": "reportDescriptionContainer",
            "css": {
              "display": "grid",
              "margin-top": "30px"
            },
            "components": [
              {
                "ctor": "Label",
                "props": {
                  "id": "reportDescriptionLabel",
                  "label": "Report Description"
                }
              },
              {
                "ctor": "TextArea",
                "props": {
                  "id": "reportDescriptionInput",
                  "label": "Report Description",
                  "type": "text",
                  "placeholder": "Report Description"
                }
              },
              {
                "ctor": "RequiredFieldValidator",
                "props": {
                  "controlToValidate": "reportDescriptionInput",
                  "errorMessage": "Please fill this field."
                }
              }
            ]
          }
        },
        {
          "ctor": "Container",
          "props": {
            "id": "reportCreatedDateContainer",
            "css": {
              "display": "grid",
              "margin-top": "30px"
            },
            "components": [
              {
                "ctor": "Label",
                "props": {
                  "id": "reportCreatedDateLabel",
                  "label": "Report Created Date"
                }
              },
              {
                "ctor": "Label",
                "props": {
                  "id": "reportCreatedDate",
                  "label": "{todayDateSaveReport}"
                }
              }
            ]
          }
        },
        {
          "ctor": "Container",
          "props": {
            "id": "reportAuthorContainer",
            "css": {
              "display": "grid",
              "margin-top": "30px"
            },
            "components": [
              {
                "ctor": "Label",
                "props": {
                  "id": "reportAuthorLabel",
                  "label": "Report Author"
                }
              },
              {
                "ctor": "Label",
                "props": {
                  "id": "reportAuthor",
                  "label": "User"
                }
              }
            ]
          }
        },
        {
          "ctor": "Container",
          "props": {
            "id": "reportErrorContainer",
            "components": [
              {
                "ctor": "Label",
                "props": {
                  "id": "reportErrorLabel",
                  "label": "Error",
                  "visible": false,
                  "css": {
                    "color": "red",
                    "fontSize": "30px"
                  }
                }
              }
            ]
          }
        }
      ],
      "modalFooter": [
        {
          "ctor": "Button",
          "props": {
            "id": "saveAndNewButton",
            "classes": ["btn", "btn-primary"],
            "label": "Save & Create New"
          }
        }
      ]
    }
  }
}