{
  "ctor": "Modal",
  "props": {
    "id": "imageModal",
    "title": "Create new Image element",
    "size": "ModalSize.SMALL",
    "components": {
      "modalBody": [
        {
          "ctor": "Container",
          "props": {
            "id": "imageModalContainer",
            "components": [
              {
                "ctor": "Container",
                "props": {
                  "id": "pathSelectorContainer",
                  "components": [
                    {
                      "ctor": "Label",
                      "props": {
                        "id": "pathSelectorTitle",
                        "label": "Image creation mode",
                        "css": {
                          "fontWeight": "700"
                        }
                      }
                    },
                    {
                      "ctor": "RadioGroup",
                      "props": {
                        "id": "pathSelectorRadioGroup",
                        "valueField": "id",
                        "direction": "horizontal",
                        "labelField": "text",
                        "classesField": "buttonClass",
                        "defaultClasses": ["btn btn-xs btn-default"],
                        "selectedClasses": ["btn btn-xs btn-success"],
                        "checkedField": "checked",
                        "value": []
                      }
                    }
                  ]
                }
              },
              {
                "ctor": "Container",
                "props": {
                  "id": "imageSelectionContainer",
                  "components": [
                    {
                      "ctor": "Label",
                      "props": {
                        "id": "imageSelectionTitle",
                        "label": "Image Expression",
                        "css": {
                          "fontWeight": "700"
                        },
                        "classes": ["row", "px-3", "mt-3"]
                      }
                    },
                    {
                      "ctor": "TextInput",
                      "props": {
                        "id": "imageSelectionInput",
                        "placeholder": "Image Expression",
                        "value": "",
                        "classes": ["row", "mx-0"],
                        "css": {
                          "width": "80%"
                        }
                      }
                    },
                    {
                      "ctor": "Container",
                      "props": {
                        "id": "imageSelectionPreviewContainer",
                        "classes": ["imageSelectionPreviewContainer"],
                        "components": [
                          {
                            "ctor": "Label",
                            "props": {
                              "id": "previewLabel",
                              "label": "No preview available",
                              "visible": true
                            }
                          },
                          {
                            "ctor": "Image",
                            "props": {
                              "id": "imagePreview",
                              "src": "",
                              "alt": "Steve Jobs",
                              "height": 200,
                              "width": 200,
                              "visible": false
                            }
                          }
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      ],
      "modalFooter": [
        {
          "ctor": "Button",
          "props": {
            "id": "finishButton",
            "classes": ["btn", "btn-primary", "mx-2"],
            "label": "Finish"
          }
        },
        {
          "ctor": "Button",
          "props": {
            "id": "cancelButton",
            "classes": ["btn", "btn-secondary", "mx-2"],
            "label": "Cancel"
          }
        }
      ]
    }
  }
}
